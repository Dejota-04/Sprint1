@model Sprint1.ViewModels.ProdutoIndexViewModel

@{
    ViewData["Title"] = "Gerenciar Produtos";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Adicionar Novo Produto</a>
</p>

<table class="table table-striped table-hover mt-4">
    <thead>
        <tr>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["TituloSort"]"
                   asp-route-termoBusca="@Model.FiltroAtual">
                    Nome
                </a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["PrecoSort"]"
                   asp-route-termoBusca="@Model.FiltroAtual">
                    Preço
                </a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["EstoqueSort"]"
                   asp-route-termoBusca="@Model.FiltroAtual">
                    Estoque
                </a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["CondicaoSort"]"
                   asp-route-termoBusca="@Model.FiltroAtual">
                    Condição
                </a>
            </th>
            <th>
                Ações
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Produtos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Preco_original)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estoque)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Condicao_produto)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Produto_ID" class="btn btn-secondary btn-sm">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Produto_ID" class="btn btn-info btn-sm">Detalhes</a>

                    <form asp-action="Delete" asp-route-id="@item.Produto_ID" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm"
                                onclick="return confirm('Tem certeza que deseja excluir o produto \'@item.Titulo\'?');">
                            Excluir
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination">
        @for (int i = 1; i <= Model.TotalPaginas; i++)
        {
            <li class="page-item @(i == Model.PaginaAtual ? "active" : "")">
                <a asp-action="Index"
                   asp-route-pagina="@i"
                   asp-route-sortOrder="@Model.SortOrderAtual"
                   asp-route-termoBusca="@Model.FiltroAtual"
                   class="page-link">
                    @i
                </a>
            </li>
        }
    </ul>
</nav>