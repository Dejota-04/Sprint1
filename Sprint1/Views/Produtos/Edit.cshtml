@model Sprint1.ViewModels.ProdutoEditViewModel
@{
    ViewData["Title"] = "Editar Mangá";
}

<h1>Editar: @Model.Titulo</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Produto_ID" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Titulo" class="form-label"></label>
                    <input asp-for="Titulo" class="form-control" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Imagem_url" class="form-label">URL da Imagem</label>
                    <input asp-for="Imagem_url" class="form-control" />
                    <span asp-validation-for="Imagem_url" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Descricao" class="form-label"></label>
                <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="Preco_original" class="form-label">Preço Original</label>
                    <input asp-for="Preco_original" class="form-control" type="text" step="0.01" />
                    <span asp-validation-for="Preco_original" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Estoque" class="form-label"></label>
                    <input asp-for="Estoque" class="form-control" type="number" />
                    <span asp-validation-for="Estoque" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Condicao_produto" class="form-label">Condição</label>
                    <select asp-for="Condicao_produto" asp-items="ViewBag.Condicoes" class="form-select">
                        <option value="">-- Selecione --</option>
                    </select>
                    <span asp-validation-for="Condicao_produto" class="text-danger"></span>
                </div>
            </div>

            <h5 class="mt-3">Dimensões (cm)</h5>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="Altura" class="form-label"></label>
                    <input asp-for="Altura" class="form-control" type="number" step="0.1" />
                    <span asp-validation-for="Altura" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Largura" class="form-label"></label>
                    <input asp-for="Largura" class="form-control" type="number" step="0.1" />
                    <span asp-validation-for="Largura" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Profundidade" class="form-label"></label>
                    <input asp-for="Profundidade" class="form-control" type="number" step="0.1" />
                    <span asp-validation-for="Profundidade" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="FuncionarioId" class="form-label">ID do Funcionário (temporário)</label>
                <input asp-for="FuncionarioId" class="form-control" type="number" />
                <span asp-validation-for="FuncionarioId" class="text-danger"></span>
            </div>

            <hr />

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}