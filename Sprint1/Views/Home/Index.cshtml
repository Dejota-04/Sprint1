@model IEnumerable<Sprint1.Models.Produto>
@{
    ViewData["Title"] = "Página Inicial";
}

<div class="text-center">
    <h1 class="display-4">Bem-vindo à Loja de Mangás!</h1>
    <p>Confira nossos produtos em destaque.</p>
</div>

<hr />

<div class="row">
    @foreach (var produto in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card h-100">

                @if (!string.IsNullOrEmpty(produto.Imagem_url))
                {
                    <img src="@produto.Imagem_url" class="card-img-top" alt="@produto.Titulo" style="height: 400px; object-fit: cover;">
                }
                else
                {
                    <img src="https://via.placeholder.com/600x800.png?text=Sem+Capa" class="card-img-top" alt="Sem Capa" style="height: 400px; object-fit: cover;">
                }

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@produto.Titulo</h5>
                    <p class="card-text">@produto.Descricao</p>
                    <p class="card-text"><strong>Preço: @produto.Preco_original.ToString("C")</strong></p>

                    <div class="mt-auto">
                        <a asp-controller="Produtos" asp-action="Details" asp-route-id="@produto.Produto_ID" class="btn btn-primary btn-sm">Detalhes</a>
                        <a asp-controller="Produtos" asp-action="Edit" asp-route-id="@produto.Produto_ID" class="btn btn-secondary btn-sm">Editar</a>

                        <form asp-controller="Produtos" asp-action="Delete" asp-route-id="@produto.Produto_ID" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm"
                                    onclick="return confirm('Tem certeza que deseja excluir o produto \'@produto.Titulo\'?');">
                                Excluir
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="text-center mt-4">
    <a asp-controller="Produtos" asp-action="Index" class="btn btn-lg btn-primary">Ver Catálogo Completo</a>
</div>