<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ADMIN</title>
    <link href="https://cdn.jsdelivr.net/npm/bootswatch@5.3/dist/brite/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Sprint1.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ADMIN</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Produtos" asp-action="Create">Adicionar Produto</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Produtos" asp-action="Index">Gerenciar Produtos</a>
                        </li>
                    </ul>
                    <form class="d-flex" asp-controller="Produtos" asp-action="Index" method="get">
                        <input class="form-control me-2" type="search" name="termoBusca" placeholder="Buscar Produto..." aria-label="Buscar" value="@ViewData["termoBuscaAtual"]">
                        <button class="btn btn-primary" type="submit">Buscar</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">

        @if (TempData["MensagemSucesso"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                <strong>Sucesso!</strong> @TempData["MensagemSucesso"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["MensagemErro"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                <strong>Erro!</strong> @TempData["MensagemErro"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark">
        <div class="container text-center">
            <h4 class="text-light opacity-75 py-2 mb-0">made with ❤️</h4>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        if ($.validator) {
            var originalRange = $.validator.methods.range;
            var originalStep = $.validator.methods.step;

            var globalizeValue = function(value) {
                return typeof value === 'string' ? value.replace(",", ".") : value;
            };

            $.validator.methods.number = function (value, element) {
                var regex = /^-?(?:\d+|\d{1,3}(?:[\s\.,]\d{3})+)(?:[\.,]\d+)?$/;
                return this.optional(element) || regex.test(value);
            };

            $.validator.methods.range = function (value, element, param) {
                var globalizedValue = globalizeValue(value);
                return originalRange.call(this, globalizedValue, element, param);
            };

            $.validator.methods.step = function (value, element, param) {
                var globalizedValue = globalizeValue(value);
                return originalStep.call(this, globalizedValue, element, param);
            };
        }
    </script>
</body>
</html>